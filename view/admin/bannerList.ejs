    <div class="container-xxl flex-grow-1 container-p-y">
        <h4 class="fw-bold py-3 mb-4"><a href="/admin/home"><span class="text-muted fw-light">home/</a></span> Banner
            list
        </h4>

        <!-- Content -->
        <div class="container mt-3 py-5">
            <% if(bannerData.length>0){ %>

            <div class="row">
                <% bannerData.forEach((data)=>{ %>
                    <div class="col-md-6">

                        <div class="card mb-3 ">
                            <a onclick="confirmation(event,'<%=data._id%>')" id="<%= data._id %>"  href="/admin/deleteBanner/?id=<%= data._id %>" class="ms-auto"><i><svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-trash3" viewBox="0 0 16 16">
                                <path d="M6.5 1h3a.5.5 0 0 1 .5.5v1H6v-1a.5.5 0 0 1 .5-.5ZM11 2.5v-1A1.5 1.5 0 0 0 9.5 0h-3A1.5 1.5 0 0 0 5 1.5v1H2.506a.58.58 0 0 0-.01 0H1.5a.5.5 0 0 0 0 1h.538l.853 10.66A2 2 0 0 0 4.885 16h6.23a2 2 0 0 0 1.994-1.84l.853-10.66h.538a.5.5 0 0 0 0-1h-.995a.59.59 0 0 0-.01 0H11Zm1.958 1-.846 10.58a1 1 0 0 1-.997.92h-6.23a1 1 0 0 1-.997-.92L3.042 3.5h9.916Zm-7.487 1a.5.5 0 0 1 .528.47l.5 8.5a.5.5 0 0 1-.998.06L5 5.03a.5.5 0 0 1 .47-.53Zm5.058 0a.5.5 0 0 1 .47.53l-.5 8.5a.5.5 0 1 1-.998-.06l.5-8.5a.5.5 0 0 1 .528-.47ZM8 4.5a.5.5 0 0 1 .5.5v8.5a.5.5 0 0 1-1 0V5a.5.5 0 0 1 .5-.5Z"/>
                              </svg></i></a>
                            <div class="row g-0">
                                <div class="col-md-4">
                                    <img class="card-img card-img-left mt-4 mx-3" src="/productImage/<%= data.image %>"
                                        alt="Card image" style="height: 200px;" />
                                </div>
                                <div class="col-md-8">
                                    <div class="card-body">
                                        <table class="table table-bordered">
                                            <tbody>
                                                <tr>
                                                    <td> <b>Title:</b> </td>
                                                    <td>
                                                        <%= data.title %>
                                                    </td>

                                                </tr>
                                                <tr>
                                                    <td> <b>sub Head</b> </td>
                                                    <td>
                                                        <%= data.subHead %>
                                                    </td>

                                                </tr>
                                                <tr>
                                                    <td> <b>percentage</b> </td>
                                                    <td>
                                                        <%= data.Percentage %>
                                                    </td>

                                                </tr>
                                                <tr>
                                                    <td> <b>Description:</b> </td>
                                                    <td>
                                                        <%= data.description.slice(0,40) %>....
                                                    </td>

                                                </tr>
                                            </tbody>
                                        </table>
                                    </div>
                                </div>
                            </div>
                        </div>

                    </div>
                    <% }) %>
            </div>
            <% }else{ %>
                <h5 style="color: red;">Banner Data is Empty</h5>
    
                <% } %>

        </div>
    </div>



